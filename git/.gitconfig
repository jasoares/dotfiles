[user]
  name =
  email =
  signingkey =
[github]
  user =
  token =
  password =
[core]
  excludesfile = /home/jsoares/.gitignore_global
[color]
  ui = auto
[alias]
  st = status -s
  ci = commit
  co = checkout
  br = branch
  df = diff
  lg = log -p
  ft = fetch -v
  sub = reset HEAD --
  fta = fetch --all -v
  lol = log --graph --decorate --oneline
  lols = log --graph --decorate --oneline --stat
  lola = log --graph --decorate --oneline --all
  lolas = log --graph --decorate --oneline --all --stat

[push]
  default = current

[diff]
  tool = diffmerge

[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = diffmerge

[mergetool "diffmerge"]
  cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
  trustExitCode = true

[imap]
  folder = "[Gmail]/Drafts"
  host = imap://imap.gmail.com
  user =
  pass =
  port = 993
  sslverify = false

[sendemail]
  smtpencryption = tls
  smtpserver = smtp.gmail.com
  smtpuser =
	smtppass =
  smtpserverport = 587
  chainreplyto = false
